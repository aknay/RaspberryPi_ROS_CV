cmake_minimum_required(VERSION 2.8.3)
project(pi_gbot)

SET(CMAKE_MODULE_PATH ${CMAKE_MODULE_PATH} /usr/local/lib/cmake/)

find_package(catkin REQUIRED COMPONENTS
  cv_bridge
  image_transport
  std_msgs
  raspicam
)

